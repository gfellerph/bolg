{{#extend "layout"}}
  {{#content "navigation"}}
    <nav>
        <a class="active" href="/"><span>Alle Posts</span></a>
        <a href="/"><img class="logo" src="{{logoURL}}" alt=""></a>
        <a href="/info"><span>Info</span></a>
    </nav>
  {{/content}}
  {{#content "main"}}
    <div id="map"></div>
    <ul class="posts">
      {{#each posts}}
      <li>
        <h1 class="h4">{{this.title}}</h1>
        <p class="small">{{this.lastPublished}}</p>
        {{{this.description}}}
        <p>
          <a href="{{this.url}}" class="button small">mehr</a>
        </p>
      </li>
      {{/each}}
    </ul>
  {{/content}}

  {{#content "scripts"}}
    <script src="{{webpack.[/vendor.js]}}"></script>
    <script src="{{webpack.[/map.js]}}"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBADvjevyMmDkHb_xjjh3FOltkO2Oa8iAQ&callback=initMap"></script>
  {{/content}}
{{/extend}}