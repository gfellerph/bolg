{{#extend "layout"}}
  {{#content "styles"}}
    <link rel="stylesheet" href="{{webpack.[/map.css]}}">
  {{/content}}
  {{#content "navigation"}}
    <nav>
        <a class="active" href="/"><span>Alle Posts</span></a>
        <a href="/"><img class="logo" src="{{logoURL}}" alt=""></a>
        <a href="/info"><span>Info</span></a>
    </nav>
  {{/content}}
  {{#content "main"}}
    <div id="map"></div>
    <ul class="posts">
      {{#each posts}}
      <li>
        <h1 class="h4">{{this.title}}</h1>
        <p class="small">{{this.lastPublished}}</p>
        {{{this.description}}}
        <p>
          <a href="{{this.url}}" class="button small">mehr</a>
        </p>
      </li>
      {{/each}}
    </ul>
  {{/content}}

  {{#content "scripts"}}
    <script src="https://www.gstatic.com/firebasejs/3.7.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/3.7.1/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/3.7.1/firebase-database.js"></script>
    <script src="https://www.gstatic.com/firebasejs/3.7.1/firebase-storage.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/locale/de-ch.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBADvjevyMmDkHb_xjjh3FOltkO2Oa8iAQ"></script>
    <script src="{{webpack.[/vendor.js]}}"></script>
    <script src="{{webpack.[/map.js]}}"></script>
  {{/content}}
{{/extend}}