<?xml version="1.0" encoding="UTF-8"?>

urlset(xmlns="http://www.sitemaps.org/schemas/sitemap/0.9")
  //- Index
  url
    loc https://bisnär.ch
    lastmod= Date.now()
  
  //- Bilder
  url
    loc https://bisnär.ch/bilder
    lastmod= Date.now()

  
  each post in posts

    //- Gschicht
    url
      loc= post.liveUrl
      lastmod= post.lastPublished

    //- Biuder
    url
      loc= post.galleryLiveUrl
      lastmod= post.lastPublished
    