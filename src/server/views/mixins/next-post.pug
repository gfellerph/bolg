mixin next-post(nextPost)
  hr.blog-divider
  if nextPost
    a.next-post-link(href=nextPost.url)
      article.next-post!= nextPost.excerpt
  else
    a.next-post-link(href='/galerie')
      div.next-post
        img(
          src='/img/grid.png'
          alt='Bildergalerie'
          data-no-zoom
        )
        h3.next-post__title No chli Biuder luege?
    br
