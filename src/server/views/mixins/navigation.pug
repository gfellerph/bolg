mixin navigation(active)
  nav
    a(class = (active === 'index' ? 'active' : '') href = (active === 'index' ? '/#gschichte' : '/'))
      span Reis
    a(href='/')
      img.logo(src=logoURL alt="Bis när Logo")
      span.sr-only Gschichte
    a(class = (active === 'galerie' ? 'active' : '') href='/bilder')
      span Bilder

mixin post-navigation(post)
  nav
    a.left-link(href="/")
      span.hidden-xxs Reis
      img.visible-xxs(src="https://adie.bisnaer.ch/s/img/pfiu_linggs.png" alt="Reis")
    a(href="/")
      img.logo(src=logoURL alt="Bis när Logo")
      span.sr-only Gschichte
    a.right-link(href= post.galleryUrl + "#i" + post.id)
      span.hidden-xxs Bilder
      span.visible-xxs.sr-only Bilder
