mixin gallery-column(images)
  div.gallery__column
    each image in images
      div.progressive-image.lqip__wrapper(style=`padding-bottom: ${image.ratio * 100}%`)
        img.gallery__image(
          alt='Bilder usem Blog'
          src=image.blurryThumb
          data-lqip-src=image.url
          data-lqip-srcset=image.srcset
          sizes="(min-width: 768px) 320px, 50vw"
        )
        noscript
          img.gallery__image(
            alt='Bilder usem Blog'
            src=image.url
            srcset=image.srcset
            sizes="(min-width: 768px) 320px, 50vw"
          )

mixin gallery-post(images, title)
  article.gallery-post
    h1= title
    div.gallery
      each imageColumn in images
        +gallery-column(imageColumn)
