mixin gallery-column(images)
  div.gallery__column
    each image in images
      img.gallery__image(
        alt='Bilder usem Blog'
        src=image.url
        srcset=image.srcset
        sizes='320px'
        data-zoom-target=image.url
      )

mixin gallery-post(images, title)
  article
    h1= title
    div.gallery
      each imageColumn in images
        +gallery-column(imageColumn)

