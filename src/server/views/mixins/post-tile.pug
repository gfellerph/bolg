mixin post-tile(post)
  li.post(data-id=post.id)
    a.post__link(href=post.url)
      - if (post.titleImage)
        div.progressive-image.lqip__wrapper(style=`padding-bottom: ${post.titleImage.ratio * 100}%`)
          img.post__title-image(
            alt="Titelbild"
            src=post.titleImage.blurryThumb
            data-lqip-src=post.titleImage.url
            data-lqip-srcset=post.titleImage.srcset
            sizes="(max-width: 640px) 100vw, 600px"
          )
          noscript
            img.post__title-image(
              alt="Titelbild"
              src=post.titleImage.blurryThumb
              srcset=post.titleImage.srcset
              sizes="(max-width: 640px) 100vw, 600px"
            )
      div.post__overlay
        p.post__published= post.formattedPostDate
        h2.post__title.h3!= post.title
