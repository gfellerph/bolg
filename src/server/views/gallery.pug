extends _layout
include mixins/gallery-post
include mixins/navigation

block meta
  title Bilder - bis när
  meta(property="og:url" content="https://bisnär.ch/bilder")
  meta(property="og:title" content="bis när")
  meta(property="og:image" content=logoURL)

block styles
  !=webpack['/galleryCss.css']

block navigation
  +post-navigation('galerie')

block body
  div.container.gallery-posts
    each post in orderedPosts
      +gallery-post(post.images, post.title)

      -if (!post.images || post.images.length == 0)
        p.italic.text-align-center Da si ja no gar keiner Bilder...

block scripts
  script(defer src=webpack['/gallery.js'])
