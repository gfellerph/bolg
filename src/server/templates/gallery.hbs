{{#extend "layout"}}
  {{#content "meta"}}
    <title>galerie - bis n√§r</title>
  {{/content}}
  {{#content "navigation"}}
    <nav>
      <a href="/"><span>Reis</span></a>
      <a href="/"><img class="logo" src="{{logoURL}}" alt=""></a>
      <a href="/galerie" class="active"><span>Bilder</span></a>
    </nav>
  {{/content}}
  {{#content "main"}}
    <div class="container">
      {{#each postsPerMonth}}
        <article class="month">
          <h1>{{@key}}</h1>
          <div class="picture-grid">
            {{#each this}}
              {{#if this.thumbnails.[320]}}
                <img class="gallery__image" src="{{this.thumbnails.[320]}}" alt="Bilder aus dem Blog" data-zoom-target="{{this.thumbnails.[1920]}}">
              {{/if}}
            {{else}}
              <p class="italic text-align-center">Da si ja no gar keiner Bilder...</p>
            {{/each}}
          </div>
        </article>
      {{/each}}
    </div>
  {{/content}}
  {{#content "scripts"}}
    <script defer="defer" src="{{webpack.[/gallery.js]}}"></script>
  {{/content}}
{{/extend}}
